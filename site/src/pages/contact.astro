---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import DataRibbon from '../components/DataRibbon.astro';
import CTASection from '../components/CTASection.astro';
---

<Layout title="Contact us" description="Get in touch with MiKare Health. We're here to help answer questions.">
  <!-- Hero Section -->
  <PageHeader
    title="Get in Touch"
    subtitle="We're here to help answer questions"
  />

  <!-- Contact Content -->
  <section class="section">
    <div class="container">
      <div class="section-intro">
        <DataRibbon variant="section" />
      </div>

      <div class="contact-grid">
        <!-- Email -->
        <div class="contact-card glass glass--edge-lit">
