---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import SocialLinks from '../components/SocialLinks.astro';
---

<Layout title="Get in Touch" description="Get in touch with MiKare Health. Contact for insurers, clinicians, patients and families, or businesses. We are here to help with questions and support.">
  <!-- Hero Section -->
  <PageHeader
    title="Get in Touch"
    tall
  />

  <!-- Contact Content -->
  <section class="section">
    <div class="container">
      <div class="contact-grid">
        <!-- Insurers -->
        <div class="contact-card glass glass--edge-lit">
          <h2 class="contact-card__title">Insurers</h2>
          <p class="contact-card__blurb">Partner with MiKare Health to reduce redundant care costs by empowering your members with a unified, portable health history that ensures every medical decision is informed. Please contact us.</p>
          <a href="mailto:hello@mikare.health" class="contact-card__link">hello@mikare.health</a>
        </div>

        <!-- Clinicians -->
        <div class="contact-card glass glass--edge-lit">
          <h2 class="contact-card__title">Clinicians</h2>
          <p class="contact-card__blurb">Partner with us to streamline consultations using tools that instantly convert complex patient narratives into clear, structured information. Please contact us.</p>
          <a href="mailto:hello@mikare.health" class="contact-card__link">hello@mikare.health</a>
        </div>

        <!-- Patients and Families -->
        <div class="contact-card glass glass--edge-lit">
          <h2 class="contact-card__title">Patients and Families</h2>
          <p class="contact-card__blurb">We are here to help with questions and support, and to help you unify your health story so you can walk into every appointment with confidence, clarity, and proof.</p>
          <a href="mailto:support@mikare.health" class="contact-card__link">support@mikare.health</a>
        </div>

        <!-- Businesses -->
        <div class="contact-card glass glass--edge-lit">
          <h2 class="contact-card__title">Businesses</h2>
          <p class="contact-card__blurb">Your team are vital to your success. Give your team the wellness tools to keep them ahead of the curve and fully focused.</p>
          <a href="mailto:hello@mikare.health" class="contact-card__link">hello@mikare.health</a>
        </div>
      </div>

      <!-- Connect with us -->
      <div class="connect-section">
        <h2 class="connect-section__title">Connect with us</h2>
        <SocialLinks variant="contact" />
      </div>
    </div>
  </section>

  <!-- Callout -->
  <section class="quote-block">
    <div class="container">
      <h3 class="quote__title">Prepared participation</h3>
      <p class="quote__text">Better conversations begin with better preparation. MiKare helps people arrive informed, organized, and ready to engage - not opposing clinicians, but contributing to clearer clinical dialogue.</p>
    </div>
  </section>
</Layout>

<style>
  .contact-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
    max-width: 1000px;
    margin-inline: auto;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }

  .contact-card {
    padding: var(--space-8);
    text-align: center;
    border-radius: var(--radius-2xl);
    transition:
      transform var(--transition-fast),
      box-shadow var(--transition-fast),
      border-color var(--transition-fast);
  }

  .contact-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg), 0 0 30px var(--accent-dim);
    border-color: var(--accent);
  }

  .contact-card__title {
    font-size: var(--text-xl);
    font-family: var(--font-sans);
    font-weight: 600;
    margin-bottom: var(--space-4);
    text-align: center;
  }

  .contact-card__blurb {
    font-size: var(--text-sm);
    color: var(--text-muted);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
    text-align: left;
  }

  .contact-card__link {
    font-size: var(--text-base);
    color: var(--accent);
    text-decoration: none;
    display: block;
    text-align: center;
    font-weight: 500;
  }

  .contact-card__link:hover {
    text-decoration: underline;
  }

  .connect-section {
    margin-top: var(--space-12);
    text-align: center;
  }

  .connect-section__title {
    font-size: var(--text-xl);
    font-family: var(--font-sans);
    font-weight: 600;
    margin-bottom: var(--space-6);
  }
</style>
