---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import DataRibbon from '../components/DataRibbon.astro';
---

<Layout title="Contact us" description="Get in touch with MiKare Health.">
  <!-- Hero Section -->
  <PageHeader
    title="Get in touch"
  />

  <!-- Contact Content -->
  <section class="section">
    <div class="container">
      <div class="section-intro">
        <DataRibbon variant="section" />
      </div>

      <div class="contact-grid">
        <!-- Insurers -->
        <div class="contact-card glass glass--edge-lit">
          <h2 class="contact-card__title">Insurers</h2>
          <p class="contact-card__blurb">For insurer partnerships and benefit programs, please contact us:</p>
          <a href="mailto:hello@mikare.health" class="contact-card__link">hello@mikare.health</a>
        </div>

        <!-- Clinicians -->
        <div class="contact-card glass glass--edge-lit">
          <h2 class="contact-card__title">Clinicians</h2>
          <p class="contact-card__blurb">For clinical collaboration and practice inquiries, please contact us:</p>
          <a href="mailto:hello@mikare.health" class="contact-card__link">hello@mikare.health</a>
        </div>

        <!-- Patients & Families -->
        <div class="contact-card glass glass--edge-lit">
          <h2 class="contact-card__title">Patients & Families</h2>
          <p class="contact-card__blurb">We're here to help with questions and support:</p>
          <a href="mailto:support@mikare.health" class="contact-card__link">support@mikare.health</a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .section-intro {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
    max-width: 1000px;
    margin-inline: auto;
  }

  @media (max-width: 900px) {
    .contact-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }

  .contact-card {
    padding: var(--space-8);
    text-align: center;
    border-radius: var(--radius-2xl);
    transition:
      transform var(--transition-fast),
      box-shadow var(--transition-fast),
      border-color var(--transition-fast);
  }

  .contact-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg), 0 0 30px var(--accent-dim);
    border-color: var(--accent);
  }

  .contact-card__title {
    font-size: var(--text-xl);
    font-family: var(--font-sans);
    font-weight: 600;
    margin-bottom: var(--space-4);
    text-align: center;
  }

  .contact-card__blurb {
    font-size: var(--text-sm);
    color: var(--text-muted);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
  }

  .contact-card__link {
    font-size: var(--text-base);
    color: var(--accent);
    text-decoration: none;
    display: block;
    text-align: center;
    font-weight: 500;
  }

  .contact-card__link:hover {
    text-decoration: underline;
  }
</style>
