---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
---

<Layout title="Press Kit" description="MiKare Health press kit and media resources. Please contact hello@mikare.health for information.">
  <PageHeader title="Press Kit" tall />

  <section class="section">
    <div class="container">
      <div class="contact-prompt glass glass--edge-lit">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="contact-prompt__icon">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
        </svg>
        <p class="contact-prompt__text">Please contact <a href="mailto:hello@mikare.health">hello@mikare.health</a> for information.</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-prompt {
    max-width: 600px;
    margin-inline: auto;
    padding: var(--space-12);
    text-align: center;
    border-radius: var(--radius-2xl);
  }

  .contact-prompt__icon {
    width: 64px;
    height: 64px;
    color: var(--accent);
    margin-bottom: var(--space-6);
  }

  .contact-prompt__text {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
  }

  .contact-prompt__text a {
    color: var(--accent);
    font-weight: 500;
  }
</style>
