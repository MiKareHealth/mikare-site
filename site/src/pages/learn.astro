---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import Button from '../components/Button.astro';
---

<Layout title="Learn" description="Explore health insights, app guides, and resources from MiKare Health.">
  <!-- Hero Section -->
  <PageHeader title="Learn" tall />

  <!-- Learn Categories -->
  <section class="section">
    <div class="container">
      <div class="learn-grid">
        <!-- Understanding Your Health -->
        <a href="/learn/understanding-your-health" class="learn-card glass glass--edge-lit">
          <div class="learn-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
            </svg>
          </div>
          <h2 class="learn-card__title">Understanding Your Health</h2>
          <p class="learn-card__desc">Articles about health conditions, patient stories, and the importance of being your own health advocate.</p>
        </a>

        <!-- Using the App -->
        <a href="/learn/using-the-app" class="learn-card glass glass--edge-lit">
          <div class="learn-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 0 0 6 3.75v16.5a2.25 2.25 0 0 0 2.25 2.25h7.5A2.25 2.25 0 0 0 18 20.25V3.75a2.25 2.25 0 0 0-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
            </svg>
          </div>
          <h2 class="learn-card__title">Using the App</h2>
          <p class="learn-card__desc">Guides and tips to get the most out of MiKare Health.</p>
        </a>

        <!-- Insights -->
        <a href="/learn/insights" class="learn-card glass glass--edge-lit">
          <div class="learn-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.383a14.406 14.406 0 0 1-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 1 0-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
            </svg>
          </div>
          <h2 class="learn-card__title">Insights</h2>
          <p class="learn-card__desc">Thought leadership on healthcare technology, AI, and the future of patient empowerment.</p>
        </a>

        <!-- Businesses -->
        <a href="/learn/businesses" class="learn-card glass glass--edge-lit">
          <div class="learn-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Z" />
            </svg>
          </div>
          <h2 class="learn-card__title">Businesses</h2>
          <p class="learn-card__desc">Information for organisations interested in MiKare Health solutions.</p>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .learn-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
    max-width: 900px;
    margin-inline: auto;
  }

  @media (max-width: 768px) {
    .learn-grid {
      grid-template-columns: 1fr;
    }
  }

  .learn-card {
    display: block;
    padding: var(--space-8);
    border-radius: var(--radius-2xl);
    text-decoration: none;
    color: inherit;
    transition:
      transform var(--transition-fast),
      box-shadow var(--transition-fast),
      border-color var(--transition-fast);
  }

  .learn-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg), 0 0 30px var(--accent-dim);
    border-color: var(--accent);
  }

  .learn-card__icon {
    width: 48px;
    height: 48px;
    margin-bottom: var(--space-4);
    color: var(--accent);
  }

  .learn-card__icon svg {
    width: 100%;
    height: 100%;
  }

  .learn-card__title {
    font-size: var(--text-xl);
    font-family: var(--font-sans);
    font-weight: 600;
    margin-bottom: var(--space-3);
  }

  .learn-card__desc {
    font-size: var(--text-sm);
    color: var(--text-muted);
    line-height: var(--leading-relaxed);
    margin: 0;
  }
</style>
