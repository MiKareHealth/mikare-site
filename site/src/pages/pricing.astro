---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import Button from '../components/Button.astro';
import DataRibbon from '../components/DataRibbon.astro';
---

<Layout title="Pricing" description="Choose the right MiKare Health plan for you or your family. Start with a 7 day free trial.">
  <!-- Hero Section -->
  <PageHeader title="Pricing" />

  <!-- Pricing Content -->
  <section class="section">
    <div class="container">
      <a href="/mikareapp" class="trial-banner glass glass--edge-lit">
        <span class="trial-banner__title">Download the app and receive 7 day free trial</span>
      </a>

      <div class="section-intro">
        <DataRibbon variant="section" />
        <h2>Choose Your Plan</h2>
      </div>

      <div class="pricing-grid">
        <!-- Individual Plan -->
        <div class="pricing-card glass glass--edge-lit">
          <h3 class="pricing-card__name">A plan just for you</h3>
          <div class="pricing-card__desc">
            <p class="pricing-card__meta">Monthly or discounted annual subscription</p>
            <p>Manage the health journey of one person in one secure place.</p>
            <p>Ideal for individuals who want full access to MiKare's features for a single profile — whether you're focusing on your own wellbeing or supporting one person as their health advocate.</p>
            <p class="pricing-card__highlight">Includes full feature access for one profile.</p>
          </div>
          <Button href="/mikareapp" variant="secondary" class="pricing-card__btn">Get Started</Button>
        </div>

        <!-- Family Plan -->
        <div class="pricing-card glass glass--edge-lit">
          <h3 class="pricing-card__name">A plan for the family</h3>
          <div class="pricing-card__desc">
            <p class="pricing-card__meta">Monthly or discounted annual subscription</p>
            <p>Manage the health journeys of up to five people in one secure place.</p>
            <p>Designed for families and carers who want to organise records, track symptoms, and stay prepared across multiple profiles — all with full access to MiKare's features.</p>
            <p class="pricing-card__highlight">Includes full feature access for up to five profiles.</p>
          </div>
          <Button href="/mikareapp" variant="secondary" class="pricing-card__btn">Get Started</Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="quote-block">
    <div class="container">
      <blockquote class="quote">
        "MiKare Health transforms how you manage family healthcare. The insights and timeline make it effortless to stay organised and informed."
      </blockquote>
    </div>
  </section>
</Layout>

<style>
  /* Trial Banner - clickable, larger, centered */
  .trial-banner {
    display: block;
    padding: var(--space-12) var(--space-10);
    text-align: center;
    max-width: 800px;
    margin-inline: auto;
    text-decoration: none;
    color: inherit;
    border-radius: var(--radius-2xl);
    transition:
      transform var(--transition-fast),
      box-shadow var(--transition-fast),
      border-color var(--transition-fast);
  }

  .trial-banner:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg), 0 0 30px var(--accent-dim);
    border-color: var(--accent);
  }

  .trial-banner__title {
    display: block;
    margin: 0;
    font-size: var(--text-2xl);
    font-weight: 600;
    font-family: var(--font-display);
  }

  /* Section intro alignment */
  .section-intro {
    text-align: center;
    max-width: 700px;
    margin-inline: auto;
    margin-bottom: var(--space-12);
  }

  .section-intro h2 {
    margin-bottom: 0;
  }

  /* Pricing Grid */
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-8);
    max-width: 900px;
    margin-inline: auto;
  }

  /* Pricing Cards with hover effects */
  .pricing-card {
    padding: var(--space-10);
    border-radius: var(--radius-2xl);
    display: flex;
    flex-direction: column;
    text-align: center;
    transition:
      transform var(--transition-fast),
      box-shadow var(--transition-fast),
      border-color var(--transition-fast);
  }

  .pricing-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg), 0 0 30px var(--accent-dim);
    border-color: var(--accent);
  }

  .pricing-card__name {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-6);
  }

  .pricing-card__desc {
    flex-grow: 1;
    text-align: left;
  }

  .pricing-card__desc p {
    margin-bottom: var(--space-4);
  }

  .pricing-card__meta {
    font-size: var(--text-sm);
    color: var(--text-muted);
    text-align: center;
  }

  .pricing-card__highlight {
    font-weight: 500;
    color: var(--text);
    text-align: center;
  }

  .pricing-card__btn {
    margin-top: auto;
    align-self: center;
  }
</style>
