---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import Button from '../components/Button.astro';
import InfoMap from '../components/InfoMap.astro';
---

<Layout title="Pricing - Choose Your Plan" description="Choose the right MiKare Health plan for you or your family. Individual and Family plans with full feature access. Start with a 7 day free trial.">
  <!-- Hero Section -->
  <PageHeader title="Pricing" tall />

  <!-- Pricing Content -->
  <section class="section">
    <div class="container">
      <div class="section-intro">
        <h2>Choose Your Plan</h2>
        <InfoMap variant="section" />
      </div>

      <!-- Introductory Rate Callout -->
      <div class="intro-rate-callout">
        <div class="intro-rate-callout__particle intro-rate-callout__particle--1"></div>
        <div class="intro-rate-callout__particle intro-rate-callout__particle--2"></div>
        <div class="intro-rate-callout__particle intro-rate-callout__particle--3"></div>
        <div class="intro-rate-callout__particle intro-rate-callout__particle--4"></div>
        <span class="intro-rate-callout__badge">Limited Time</span>
        <p class="intro-rate-callout__text">
          <svg class="intro-rate-callout__icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          Introductory rates until 28 Feb 2026
        </p>
      </div>

      <!-- Pricing Table -->
      <div class="pricing-table-wrapper">
        <table class="pricing-table">
          <thead>
            <tr>
              <th scope="col">Plan</th>
              <th scope="col">Annual</th>
              <th scope="col">Monthly</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <span class="pricing-table__plan-name">Family</span>
                <span class="pricing-table__plan-desc">Up to 5 profiles</span>
              </td>
              <td class="pricing-table__price">$224.99 AUD</td>
              <td class="pricing-table__price">$24.99 AUD</td>
            </tr>
            <tr>
              <td>
                <span class="pricing-table__plan-name">Individual</span>
                <span class="pricing-table__plan-desc">1 profile</span>
              </td>
              <td class="pricing-table__price">$124.99 AUD</td>
              <td class="pricing-table__price">$14.99 AUD</td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="pricing-grid">
        <!-- Individual Plan -->
        <div class="pricing-card glass glass--edge-lit">
          <h3 class="pricing-card__name">A plan just for you</h3>
          <div class="pricing-card__desc">
            <p class="pricing-card__meta">Monthly or discounted annual subscription</p>
            <p>Manage the health journey of one person in one secure place.</p>
            <p>Ideal for individuals who want full access to MiKare's features for a single profile — whether you're focusing on your own wellbeing or supporting one person as their health advocate.</p>
            <p class="pricing-card__highlight">Includes full feature access for one profile.</p>
          </div>
          <Button href="https://apps.apple.com/us/app/mikare-health/id6755099048" target="_blank" rel="noopener noreferrer" variant="secondary" class="pricing-card__btn">Get Started</Button>
        </div>

        <!-- Family Plan -->
        <div class="pricing-card glass glass--edge-lit">
          <h3 class="pricing-card__name">A plan for the family</h3>
          <div class="pricing-card__desc">
            <p class="pricing-card__meta">Monthly or discounted annual subscription</p>
            <p>Manage the health journeys of up to five people in one secure place.</p>
            <p>Designed for families and carers who want to organise records, track symptoms, and stay prepared across multiple profiles — all with full access to MiKare's features.</p>
            <p class="pricing-card__highlight">Includes full feature access for up to five profiles.</p>
          </div>
          <Button href="https://apps.apple.com/us/app/mikare-health/id6755099048" target="_blank" rel="noopener noreferrer" variant="secondary" class="pricing-card__btn">Get Started</Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="quote-block">
    <div class="container">
      <h3 class="quote__title">Longitudinal insight, not isolated moments</h3>
      <p class="quote__text">Health rarely reveals itself in a single visit. MiKare emphasizes patterns over time so what once seemed random becomes interpretable, not just recorded.</p>
    </div>
  </section>
</Layout>

<style>
  /* Introductory Rate Callout - Floating Particles */
  .intro-rate-callout {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    padding: var(--space-5) var(--space-8);
    max-width: 520px;
    margin-inline: auto;
    margin-bottom: var(--space-10);
    background: linear-gradient(
      90deg,
      rgba(209, 48, 127, 0.06) 0%,
      rgba(45, 212, 191, 0.06) 100%
    );
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    position: relative;
    overflow: hidden;
  }

  /* Floating particles */
  .intro-rate-callout__particle {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
    opacity: 0.15;
    filter: blur(1px);
  }

  .intro-rate-callout__particle--1 {
    width: 40px;
    height: 40px;
    background: var(--brand-magenta, #d1307f);
    top: -10px;
    left: 10%;
    animation: float-1 25s ease-in-out infinite;
  }

  .intro-rate-callout__particle--2 {
    width: 30px;
    height: 30px;
    background: var(--brand-teal, #2dd4bf);
    bottom: -5px;
    right: 15%;
    animation: float-2 30s ease-in-out infinite;
  }

  .intro-rate-callout__particle--3 {
    width: 20px;
    height: 20px;
    background: var(--brand-navy, #1e3a5f);
    top: 50%;
    left: -5px;
    animation: float-3 20s ease-in-out infinite;
  }

  .intro-rate-callout__particle--4 {
    width: 25px;
    height: 25px;
    background: var(--brand-magenta, #d1307f);
    top: 20%;
    right: 5%;
    animation: float-4 35s ease-in-out infinite;
  }

  @keyframes float-1 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    25% {
      transform: translate(30px, 20px) scale(1.1);
    }
    50% {
      transform: translate(10px, 35px) scale(0.9);
    }
    75% {
      transform: translate(-20px, 15px) scale(1.05);
    }
  }

  @keyframes float-2 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(-25px, -20px) scale(1.15);
    }
    66% {
      transform: translate(15px, -30px) scale(0.85);
    }
  }

  @keyframes float-3 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(40px, -10px) scale(1.2);
    }
  }

  @keyframes float-4 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    25% {
      transform: translate(-15px, 25px) scale(0.9);
    }
    75% {
      transform: translate(-30px, -15px) scale(1.1);
    }
  }

  .intro-rate-callout__badge {
    display: inline-block;
    padding: var(--space-1) var(--space-3);
    background: var(--accent);
    color: white;
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    border-radius: var(--radius-md);
    position: relative;
    z-index: 1;
  }

  .intro-rate-callout__icon {
    width: 20px;
    height: 20px;
    color: var(--accent);
    flex-shrink: 0;
  }

  .intro-rate-callout__text {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin: 0;
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--text);
    position: relative;
    z-index: 1;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .intro-rate-callout__particle {
      animation: none;
    }
  }

  /* Section intro alignment */
  .section-intro {
    text-align: center;
    max-width: 700px;
    margin-inline: auto;
    margin-bottom: var(--space-8);
  }

  .section-intro h2 {
    margin-bottom: var(--space-2);
  }

  /* Pricing Table */
  .pricing-table-wrapper {
    max-width: 700px;
    margin-inline: auto;
    margin-bottom: var(--space-12);
    overflow-x: auto;
  }

  .pricing-table {
    width: 100%;
    border-collapse: collapse;
    text-align: left;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
  }

  .pricing-table th,
  .pricing-table td {
    padding: var(--space-4) var(--space-6);
    border-bottom: 1px solid var(--glass-border);
  }

  .pricing-table thead th {
    background: var(--bg-secondary);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--text-muted);
  }

  .pricing-table tbody tr:last-child td {
    border-bottom: none;
  }

  .pricing-table__plan-name {
    display: block;
    font-weight: 600;
    font-size: var(--text-lg);
    color: var(--text);
  }

  .pricing-table__plan-desc {
    display: block;
    font-size: var(--text-sm);
    color: var(--text-muted);
  }

  .pricing-table__price {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--accent);
  }

  @media (max-width: 600px) {
    .pricing-table th,
    .pricing-table td {
      padding: var(--space-3) var(--space-4);
    }

    .pricing-table__price {
      font-size: var(--text-lg);
    }

    .intro-rate-callout {
      flex-direction: column;
      text-align: center;
      gap: var(--space-2);
      margin-left: var(--space-4);
      margin-right: var(--space-4);
      padding: var(--space-4) var(--space-6);
    }

    .intro-rate-callout__text {
      flex-direction: column;
      gap: var(--space-1);
    }

    .intro-rate-callout__particle {
      opacity: 0.1;
    }
  }

  /* Pricing Grid */
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-8);
    max-width: 900px;
    margin-inline: auto;
  }

  /* Pricing Cards with hover effects */
  .pricing-card {
    padding: var(--space-10);
    border-radius: var(--radius-2xl);
    display: flex;
    flex-direction: column;
    text-align: center;
    transition:
      transform var(--transition-fast),
      box-shadow var(--transition-fast),
      border-color var(--transition-fast);
  }

  .pricing-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg), 0 0 30px var(--accent-dim);
    border-color: var(--accent);
  }

  .pricing-card__name {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-6);
  }

  .pricing-card__desc {
    flex-grow: 1;
    text-align: left;
  }

  .pricing-card__desc p {
    margin-bottom: var(--space-4);
  }

  .pricing-card__meta {
    font-size: var(--text-sm);
    color: var(--text-muted);
    text-align: center;
  }

  .pricing-card__highlight {
    font-weight: 500;
    color: var(--text);
    text-align: center;
  }

  .pricing-card__btn {
    margin-top: auto;
    align-self: center;
  }
</style>
