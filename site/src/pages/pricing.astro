---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import Button from '../components/Button.astro';
import InfoMap from '../components/InfoMap.astro';
---

<Layout title="Pricing" description="Choose the right MiKare Health plan for you or your family. Start with a 7 day free trial.">
  <!-- Hero Section -->
  <PageHeader title="Pricing" tall />

  <!-- Pricing Content -->
  <section class="section">
    <div class="container">
      <a href="https://apps.apple.com/us/app/mikare-health/id6755099048" target="_blank" rel="noopener noreferrer" class="trial-banner glass glass--edge-lit">
        <span class="trial-banner__title">Download the app and receive 7 day free trial</span>
      </a>

      <!-- Introductory Rate Callout -->
      <div class="intro-rate-callout">
        <span class="intro-rate-callout__badge">Limited Time</span>
        <p class="intro-rate-callout__text">Introductory rates until 28 Feb 2026</p>
      </div>

      <div class="section-intro">
        <h2>Choose Your Plan</h2>
        <InfoMap variant="section" />
      </div>

      <!-- Pricing Table -->
      <div class="pricing-table-wrapper">
        <table class="pricing-table">
          <thead>
            <tr>
              <th scope="col">Plan</th>
              <th scope="col">Annual</th>
              <th scope="col">Monthly</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <span class="pricing-table__plan-name">Family</span>
                <span class="pricing-table__plan-desc">Up to 5 profiles</span>
              </td>
              <td class="pricing-table__price">$244.99</td>
              <td class="pricing-table__price">$24.99</td>
            </tr>
            <tr>
              <td>
                <span class="pricing-table__plan-name">Individual</span>
                <span class="pricing-table__plan-desc">1 profile</span>
              </td>
              <td class="pricing-table__price">$124.99</td>
              <td class="pricing-table__price">$14.99</td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="pricing-grid">
        <!-- Individual Plan -->
        <div class="pricing-card glass glass--edge-lit">
          <h3 class="pricing-card__name">A plan just for you</h3>
          <div class="pricing-card__desc">
            <p class="pricing-card__meta">Monthly or discounted annual subscription</p>
            <p>Manage the health journey of one person in one secure place.</p>
            <p>Ideal for individuals who want full access to MiKare's features for a single profile — whether you're focusing on your own wellbeing or supporting one person as their health advocate.</p>
            <p class="pricing-card__highlight">Includes full feature access for one profile.</p>
          </div>
          <Button href="https://apps.apple.com/us/app/mikare-health/id6755099048" target="_blank" rel="noopener noreferrer" variant="secondary" class="pricing-card__btn">Get Started</Button>
        </div>

        <!-- Family Plan -->
        <div class="pricing-card glass glass--edge-lit">
          <h3 class="pricing-card__name">A plan for the family</h3>
          <div class="pricing-card__desc">
            <p class="pricing-card__meta">Monthly or discounted annual subscription</p>
            <p>Manage the health journeys of up to five people in one secure place.</p>
            <p>Designed for families and carers who want to organise records, track symptoms, and stay prepared across multiple profiles — all with full access to MiKare's features.</p>
            <p class="pricing-card__highlight">Includes full feature access for up to five profiles.</p>
          </div>
          <Button href="https://apps.apple.com/us/app/mikare-health/id6755099048" target="_blank" rel="noopener noreferrer" variant="secondary" class="pricing-card__btn">Get Started</Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial -->
  <section class="quote-block">
    <div class="container">
      <h3 class="quote__title">Longitudinal insight, not isolated moments</h3>
      <p class="quote__text">Health rarely reveals itself in a single visit. MiKare emphasizes patterns over time so what once seemed random becomes interpretable, not just recorded.</p>
    </div>
  </section>
</Layout>

<style>
  /* Trial Banner - clickable, larger, centered */
  .trial-banner {
    display: block;
    padding: var(--space-12) var(--space-10);
    text-align: center;
    max-width: 800px;
    margin-inline: auto;
    margin-bottom: var(--space-8);
    text-decoration: none;
    color: inherit;
    border-radius: var(--radius-2xl);
    transition:
      transform var(--transition-fast),
      box-shadow var(--transition-fast),
      border-color var(--transition-fast);
  }

  .trial-banner:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg), 0 0 30px var(--accent-dim);
    border-color: var(--accent);
  }

  .trial-banner__title {
    display: block;
    margin: 0;
    font-size: var(--text-2xl);
    font-weight: 600;
    font-family: var(--font-serif);
  }

  /* Introductory Rate Callout */
  .intro-rate-callout {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    padding: var(--space-4) var(--space-6);
    margin-bottom: var(--space-12);
    max-width: 500px;
    margin-inline: auto;
    background: linear-gradient(135deg, var(--accent-dim) 0%, transparent 100%);
    border: 1px solid var(--accent);
    border-radius: var(--radius-xl);
    position: relative;
    overflow: hidden;
  }

  .intro-rate-callout::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.15),
      transparent
    );
    animation: shimmer-callout 3s ease-in-out infinite;
  }

  @keyframes shimmer-callout {
    0% {
      left: -100%;
    }
    50%, 100% {
      left: 100%;
    }
  }

  .intro-rate-callout__badge {
    display: inline-block;
    padding: var(--space-1) var(--space-3);
    background: var(--accent);
    color: white;
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    border-radius: var(--radius-md);
  }

  .intro-rate-callout__text {
    margin: 0;
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--text);
  }

  /* Section intro alignment */
  .section-intro {
    text-align: center;
    max-width: 700px;
    margin-inline: auto;
    margin-bottom: var(--space-12);
  }

  .section-intro h2 {
    margin-bottom: 0;
  }

  /* Pricing Table */
  .pricing-table-wrapper {
    max-width: 700px;
    margin-inline: auto;
    margin-bottom: var(--space-12);
    overflow-x: auto;
  }

  .pricing-table {
    width: 100%;
    border-collapse: collapse;
    text-align: left;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
  }

  .pricing-table th,
  .pricing-table td {
    padding: var(--space-4) var(--space-6);
    border-bottom: 1px solid var(--glass-border);
  }

  .pricing-table thead th {
    background: var(--bg-secondary);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--text-muted);
  }

  .pricing-table tbody tr:last-child td {
    border-bottom: none;
  }

  .pricing-table__plan-name {
    display: block;
    font-weight: 600;
    font-size: var(--text-lg);
    color: var(--text);
  }

  .pricing-table__plan-desc {
    display: block;
    font-size: var(--text-sm);
    color: var(--text-muted);
  }

  .pricing-table__price {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--accent);
  }

  @media (max-width: 600px) {
    .pricing-table th,
    .pricing-table td {
      padding: var(--space-3) var(--space-4);
    }

    .pricing-table__price {
      font-size: var(--text-lg);
    }

    .intro-rate-callout {
      flex-direction: column;
      text-align: center;
    }
  }

  /* Pricing Grid */
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-8);
    max-width: 900px;
    margin-inline: auto;
  }

  /* Pricing Cards with hover effects */
  .pricing-card {
    padding: var(--space-10);
    border-radius: var(--radius-2xl);
    display: flex;
    flex-direction: column;
    text-align: center;
    transition:
      transform var(--transition-fast),
      box-shadow var(--transition-fast),
      border-color var(--transition-fast);
  }

  .pricing-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg), 0 0 30px var(--accent-dim);
    border-color: var(--accent);
  }

  .pricing-card__name {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-6);
  }

  .pricing-card__desc {
    flex-grow: 1;
    text-align: left;
  }

  .pricing-card__desc p {
    margin-bottom: var(--space-4);
  }

  .pricing-card__meta {
    font-size: var(--text-sm);
    color: var(--text-muted);
    text-align: center;
  }

  .pricing-card__highlight {
    font-weight: 500;
    color: var(--text);
    text-align: center;
  }

  .pricing-card__btn {
    margin-top: auto;
    align-self: center;
  }
</style>
