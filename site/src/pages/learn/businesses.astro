---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/PageHeader.astro';
---

<Layout title="Businesses | Learn" description="Information for organisations interested in MiKare Health solutions.">
  <PageHeader title="Businesses" tall />

  <section class="section">
    <div class="container">
      <div class="contact-prompt glass glass--edge-lit">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="contact-prompt__icon">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Zm0 3h.008v.008h-.008v-.008Z" />
        </svg>
        <p class="contact-prompt__text">Please contact <a href="mailto:hello@mikare.health">hello@mikare.health</a> for information.</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-prompt {
    max-width: 600px;
    margin-inline: auto;
    padding: var(--space-12);
    text-align: center;
    border-radius: var(--radius-2xl);
  }

  .contact-prompt__icon {
    width: 64px;
    height: 64px;
    color: var(--accent);
    margin-bottom: var(--space-6);
  }

  .contact-prompt__text {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
  }

  .contact-prompt__text a {
    color: var(--accent);
    font-weight: 500;
  }
</style>
