---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import CTASection from '../components/CTASection.astro';
---

<Layout title="News" description="Stay up to date with the latest news and updates from MiKare Health.">
  <!-- Hero Section -->
  <PageHeader
    title="News"
    subtitle="Stay up to date with the latest from MiKare Health"
  />

  <!-- News Content -->
  <section class="section">
    <div class="container">
      <div class="text-center" style="max-width: 600px; margin-inline: auto; padding: var(--space-16) 0;">
        <div class="glass glass--edge-lit" style="padding: var(--space-12);">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" style="width: 48px; height: 48px; color: var(--accent); margin-bottom: var(--space-6);">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 01-2.25 2.25M16.5 7.5V18a2.25 2.25 0 002.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 002.25 2.25h13.5M6 7.5h3v3H6v-3z" />
          </svg>
          <h3 style="margin-bottom: var(--space-4);">Coming Soon</h3>
          <p style="color: var(--text-secondary);">
            News and updates will be published here. Check back soon for the latest announcements from MiKare Health.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTASection />
</Layout>
