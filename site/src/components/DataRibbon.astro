---
/**
 * DataRibbon Component
 *
 * A signature visual motif representing data/information flow.
 * Clean strokes only—no glow filters.
 * Uses brand colors with intentional opacity levels.
 *
 * @prop {"hero" | "section" | "inline"} variant - Size/placement variant
 * @prop {boolean} animate - Enable subtle flow animation (default: false)
 * @prop {boolean} glass - Enable glassmorphism effect (more transparent, shimmer on load)
 * @prop {string} class - Additional CSS classes
 */

interface Props {
  variant?: "hero" | "section" | "inline";
  animate?: boolean;
  glass?: boolean;
  class?: string;
}

const {
  variant = "section",
  animate = false,
  glass = false,
  class: className,
} = Astro.props;

const isHero = variant === "hero";

const classes = [
  "data-ribbon",
  `data-ribbon--${variant}`,
  animate && "data-ribbon--animated",
  glass && "data-ribbon--glass",
  className,
].filter(Boolean).join(" ");

// Generate unique ID for gradient
const gradientId = `ribbon-gradient-${Math.random().toString(36).slice(2, 9)}`;
---

<div class={classes} aria-hidden="true">
  <svg
    class="data-ribbon__svg"
    viewBox="0 0 1200 120"
    preserveAspectRatio="none"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <defs>
      <!-- Primary gradient for the ribbon stroke -->
      <linearGradient id={gradientId} x1="0%" y1="50%" x2="100%" y2="50%">
        <stop offset="0%" stop-color="var(--ribbon-color-1)" stop-opacity="0" />
        <stop offset="15%" stop-color="var(--ribbon-color-1)" stop-opacity="var(--ribbon-opacity)" />
        <stop offset="50%" stop-color="var(--ribbon-color-2)" stop-opacity="var(--ribbon-opacity)" />
        <stop offset="85%" stop-color="var(--ribbon-color-1)" stop-opacity="var(--ribbon-opacity)" />
        <stop offset="100%" stop-color="var(--ribbon-color-1)" stop-opacity="0" />
      </linearGradient>
      <!-- Secondary gradient for tertiary line -->
      <linearGradient id={`${gradientId}-tertiary`} x1="0%" y1="50%" x2="100%" y2="50%">
        <stop offset="0%" stop-color="var(--ribbon-color-2)" stop-opacity="0" />
        <stop offset="25%" stop-color="var(--ribbon-color-2)" stop-opacity="calc(var(--ribbon-opacity) * 0.5)" />
        <stop offset="75%" stop-color="var(--ribbon-color-1)" stop-opacity="calc(var(--ribbon-opacity) * 0.5)" />
        <stop offset="100%" stop-color="var(--ribbon-color-1)" stop-opacity="0" />
      </linearGradient>
    </defs>

    <!-- The flowing data ribbon path - organic wave suggesting information flow -->
    <path
      class="data-ribbon__path"
      d="M0,60
         C150,60 150,15 300,15
         C450,15 450,105 600,105
         C750,105 750,35 900,35
         C1050,35 1050,85 1200,85"
      stroke={`url(#${gradientId})`}
      stroke-width="2.5"
      stroke-linecap="round"
    />

    <!-- Secondary parallel line for depth -->
    <path
      class="data-ribbon__path data-ribbon__path--secondary"
      d="M0,70
         C150,70 150,25 300,25
         C450,25 450,115 600,115
         C750,115 750,45 900,45
         C1050,45 1050,95 1200,95"
      stroke={`url(#${gradientId})`}
      stroke-width="1.5"
      stroke-linecap="round"
      opacity="0.6"
    />

    <!-- Tertiary line for additional layering -->
    <path
      class="data-ribbon__path data-ribbon__path--tertiary"
      d="M0,50
         C150,50 150,5 300,5
         C450,5 450,95 600,95
         C750,95 750,25 900,25
         C1050,25 1050,75 1200,75"
      stroke={`url(#${gradientId}-tertiary)`}
      stroke-width="1"
      stroke-linecap="round"
      opacity="0.4"
    />

    {isHero && (
      <>
        <!-- Shimmer overlay - white pulse that travels along the ribbon -->
        <path
          class="data-ribbon__shimmer"
          d="M0,60
             C150,60 150,15 300,15
             C450,15 450,105 600,105
             C750,105 750,35 900,35
             C1050,35 1050,85 1200,85"
          stroke="white"
          stroke-width="5"
          stroke-linecap="round"
          fill="none"
        />
        <!-- Secondary shimmer - slightly delayed -->
        <path
          class="data-ribbon__shimmer data-ribbon__shimmer--secondary"
          d="M0,70
             C150,70 150,25 300,25
             C450,25 450,115 600,115
             C750,115 750,45 900,45
             C1050,45 1050,95 1200,95"
          stroke="white"
          stroke-width="3"
          stroke-linecap="round"
          fill="none"
        />
      </>
    )}
  </svg>
</div>

<style>
  .data-ribbon {
    position: absolute;
    pointer-events: none;
    z-index: 0;
    /* Padding prevents stroke clipping */
    padding: 2px 0;
  }

  .data-ribbon__svg {
    display: block;
    width: 100%;
    height: 100%;
  }

  .data-ribbon__path {
    transition: opacity 200ms ease-out;
  }

  /* ─── Light Mode ─── */
  /* Magenta primary, teal secondary */
  .data-ribbon {
    --ribbon-color-1: var(--brand-magenta);
    --ribbon-color-2: var(--brand-teal);
    --ribbon-opacity: 0.38;
  }

  /* ─── Dark Mode ─── */
  /* Teal primary (dominant), magenta secondary - NO navy */
  :global([data-theme="dark"]) .data-ribbon {
    --ribbon-color-1: var(--brand-teal);
    --ribbon-color-2: var(--brand-magenta);
    --ribbon-opacity: 0.34;
  }

  /* ─── Hero Variant ─── */
  .data-ribbon--hero {
    inset: 0;
    --ribbon-opacity: 0.32;
    pointer-events: auto; /* Enable hover */
  }

  :global([data-theme="dark"]) .data-ribbon--hero {
    --ribbon-opacity: 0.28;
  }

  /* ─── Shimmer Animation ─── */
  /* Path length is ~1600px. Use dasharray to show small segment, hide rest */
  .data-ribbon__shimmer {
    stroke-dasharray: 80 1600;
    stroke-dashoffset: 80;
    opacity: 0.6;
    animation: shimmerTrail 1.8s ease-in-out 0.2s forwards;
  }

  .data-ribbon__shimmer--secondary {
    stroke-dasharray: 60 1600;
    stroke-dashoffset: 60;
    opacity: 0.4;
    animation-delay: 0.35s;
    animation-duration: 2s;
  }

  :global([data-theme="dark"]) .data-ribbon__shimmer {
    opacity: 0.4;
  }

  :global([data-theme="dark"]) .data-ribbon__shimmer--secondary {
    opacity: 0.25;
  }

  @keyframes shimmerTrail {
    0% {
      stroke-dashoffset: 80;
    }
    100% {
      stroke-dashoffset: -1600;
    }
  }

  /* Shimmer on hover - use different keyframes name to re-trigger */
  .data-ribbon--hero:hover .data-ribbon__shimmer,
  :global(.hero:hover) .data-ribbon--hero .data-ribbon__shimmer,
  :global(.page-header:hover) .data-ribbon--hero .data-ribbon__shimmer {
    animation: shimmerHover 1.4s ease-in-out forwards;
  }

  .data-ribbon--hero:hover .data-ribbon__shimmer--secondary,
  :global(.hero:hover) .data-ribbon--hero .data-ribbon__shimmer--secondary,
  :global(.page-header:hover) .data-ribbon--hero .data-ribbon__shimmer--secondary {
    animation: shimmerHover 1.6s ease-in-out 0.1s forwards;
  }

  @keyframes shimmerHover {
    0% {
      stroke-dashoffset: 80;
    }
    100% {
      stroke-dashoffset: -1600;
    }
  }

  /* Subtle increase on hero hover/focus */
  .data-ribbon--hero:hover,
  :global(.hero:hover) .data-ribbon--hero,
  :global(.hero:focus-within) .data-ribbon--hero {
    --ribbon-opacity: 0.42;
  }

  :global([data-theme="dark"]) .data-ribbon--hero:hover,
  :global([data-theme="dark"] .hero:hover) .data-ribbon--hero {
    --ribbon-opacity: 0.36;
  }

  /* ─── Glass Variant (translucent for page headers) ─── */
  .data-ribbon--glass {
    --ribbon-opacity: 0.14;
  }

  .data-ribbon--glass .data-ribbon__shimmer {
    opacity: 0.4;
  }

  .data-ribbon--glass .data-ribbon__shimmer--secondary {
    opacity: 0.25;
  }

  :global([data-theme="dark"]) .data-ribbon--glass {
    --ribbon-opacity: 0.10;
  }

  :global([data-theme="dark"]) .data-ribbon--glass .data-ribbon__shimmer {
    opacity: 0.25;
  }

  :global([data-theme="dark"]) .data-ribbon--glass .data-ribbon__shimmer--secondary {
    opacity: 0.15;
  }

  /* Glass hover - slightly more visible */
  .data-ribbon--glass:hover,
  :global(.page-header:hover) .data-ribbon--glass {
    --ribbon-opacity: 0.22;
  }

  :global([data-theme="dark"]) .data-ribbon--glass:hover,
  :global([data-theme="dark"] .page-header:hover) .data-ribbon--glass {
    --ribbon-opacity: 0.16;
  }

  /* ─── Reduced Motion ─── */
  @media (prefers-reduced-motion: reduce) {
    .data-ribbon__shimmer {
      animation: none;
      opacity: 0;
    }
  }

  /* ─── Section Variant ─── */
  .data-ribbon--section {
    position: relative;
    width: 100%;
    max-width: 800px;
    height: 60px;
    margin: 0 auto var(--space-8);
    --ribbon-opacity: 0.36;
  }

  :global([data-theme="dark"]) .data-ribbon--section {
    --ribbon-opacity: 0.32;
  }

  /* ─── Inline Variant ─── */
  .data-ribbon--inline {
    position: relative;
    display: inline-block;
    width: 120px;
    height: 20px;
    vertical-align: middle;
    --ribbon-opacity: 0.28;
  }

  :global([data-theme="dark"]) .data-ribbon--inline {
    --ribbon-opacity: 0.24;
  }

  /* ─── Animation ─── */
  @keyframes ribbonFlow {
    0% {
      stroke-dashoffset: 0;
    }
    100% {
      stroke-dashoffset: -200;
    }
  }

  .data-ribbon--animated .data-ribbon__path {
    stroke-dasharray: 20 10;
    animation: ribbonFlow 8s linear infinite;
  }

  .data-ribbon--animated .data-ribbon__path--secondary {
    animation-duration: 12s;
    animation-direction: reverse;
  }

  /* ─── Reduced Motion ─── */
  @media (prefers-reduced-motion: reduce) {
    .data-ribbon--animated .data-ribbon__path {
      animation: none;
    }
  }
</style>
