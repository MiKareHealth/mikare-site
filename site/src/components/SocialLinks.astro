---

<ul class={classes}>
  {socialLinks.map((social) => (
    <li>
      {social.disabled ? (
        <span
          class="social-links__disabled"
          aria-label={social.label}
          aria-disabled="true"
          role="img"
        >
          <svg viewBox={social.viewBox} xmlns="http://www.w3.org/2000/svg" aria-hidden="true" set:html={social.icon} />
        </span>
      ) : (
        <a href={social.href} target="_blank" rel="noopener noreferrer" aria-label={social.label}>
          <svg viewBox={social.viewBox} xmlns="http://www.w3.org/2000/svg" aria-hidden="true" set:html={social.icon} />
        </a>
      )}
    </li>
  ))}
</ul>

<style>
  .social-links {
    display: flex;
    gap: var(--space-4);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .social-links a,
  .social-links__disabled {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    color: var(--text-secondary);
    transition: all var(--transition-fast);
  }

  .social-links a:hover {
    border-color: var(--accent);
    color: var(--accent);
    transform: translateY(-2px);
  }

  .social-links__disabled {
    cursor: not-allowed;
    opacity: 0.5;
  }

  .social-links svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
  }

  /* Contact page variant */
  .social-links--contact {
    justify-content: center;
  }

  .social-links--contact a,
  .social-links--contact .social-links__disabled {
    border: none;
    width: 40px;
    height: 40px;
    border-radius: var(--radius-md);
  }
</style>
