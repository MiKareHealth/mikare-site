---
import SocialLinks from './SocialLinks.astro';

const currentYear = new Date().getFullYear();

const footerLinks = {
  main: [
    { href: '/', label: 'Home' },
    { href: '/mikareapp', label: 'MiKare App' },
    { href: '/pricing', label: 'Pricing' },
    { href: '/our-journey', label: 'Our Journey' },
    { href: '/news', label: 'News' },
    { href: '/contact', label: 'Contact' },
  ],
  legal: [
    { href: '/privacy', label: 'Privacy Policy' },
    { href: '/terms', label: 'Terms and Conditions' },
  ],
};
---

<footer class="footer" role="contentinfo">
  <div class="container">
    <div class="footer__grid">
      <div class="footer__brand">
        <a href="/" class="footer__logo">
          <span class="footer__logo-icon">
            <img
              src="https://mikare.health/wp-content/uploads/2025/11/2.-Icon.png"
              alt=""
              width="32"
              height="32"
              class="footer__logo-img"
              aria-hidden="true"
            />
          </span>
          <span>MiKare Health</span>
        </a>
        <p class="footer__tagline">
          MiKare Health is the smart, family-friendly app that helps you track symptoms, detect patterns, and understand your health with clarity and confidence.
        </p>
        <SocialLinks />
      </div>

      <div class="footer__nav">
        <span class="footer__heading">Navigation</span>
        <ul class="footer__links">
          {footerLinks.main.map((link) => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer__nav">
        <span class="footer__heading">Legal</span>
        <ul class="footer__links">
          {footerLinks.legal.map((link) => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer__nav">
        <span class="footer__heading">Resources</span>
        <ul class="footer__links">
          <li><a href="https://apps.apple.com/us/app/mikare-health/id6755099048" target="_blank" rel="noopener noreferrer">Download App</a></li>
          <li><a href="https://www.amazon.com/Mum-Please-Help-Karen-Perks-ebook/dp/B0F3CMQSZ7" target="_blank" rel="noopener noreferrer">Book</a></li>
        </ul>
      </div>

      <div class="footer__nav">
        <span class="footer__heading">Contact</span>
        <ul class="footer__links">
          <li><a href="mailto:hello@mikare.health">hello@mikare.health</a></li>
          <li><a href="mailto:support@mikare.health">support@mikare.health</a></li>
          <li><a href="/press">Press</a></li>
          <li><a href="/press-kit">Press Kit</a></li>
        </ul>
        <p class="footer__address">
          ABN 11 688 299 443
        </p>
      </div>
    </div>

    <div class="footer__bottom">
      <p>&copy; {currentYear} MiKare Health Pty Ltd. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--bg-secondary);
    border-top: 1px solid var(--border);
    padding: var(--space-16) 0 var(--space-8);
    margin-top: var(--space-24);
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr 1.5fr;
    gap: var(--space-10);
    margin-bottom: var(--space-12);
  }

  .footer__brand {
    max-width: 320px;
  }

  .footer__logo {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    font-family: var(--font-serif);
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--text);
    text-decoration: none;
    margin-bottom: var(--space-4);
  }

  .footer__logo-icon {
    display: flex;
    align-items: center;
  }

  .footer__logo-img {
    width: 32px;
    height: 32px;
    object-fit: contain;
    border-radius: var(--radius-md);
  }

  .footer__tagline {
    font-size: var(--text-sm);
    color: var(--text-muted);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
  }

  .footer__heading {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--text);
    margin-bottom: var(--space-4);
  }

  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__links li {
    margin-bottom: var(--space-2);
  }

  .footer__links a {
    font-size: var(--text-sm);
    color: var(--text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer__links a:hover {
    color: var(--accent);
  }

  .footer__address {
    font-size: var(--text-sm);
    color: var(--text-muted);
    line-height: var(--leading-relaxed);
    margin-top: var(--space-4);
  }

  .footer__bottom {
    padding-top: var(--space-8);
    border-top: 1px solid var(--border);
    text-align: center;
  }

  .footer__bottom p {
    font-size: var(--text-sm);
    color: var(--text-muted);
  }

  /* Tablet layout (768px-900px): Optimized 2-column grid with proper order control
     Uses CSS Grid order property instead of direction: rtl for RTL language support */
  @media (max-width: 900px) {
    .footer__grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-8);
    }

    .footer__brand {
      grid-column: span 2;
      max-width: none;
      order: 1;
    }

    /* Use CSS Grid order for proper layout control */
    .footer__nav:nth-of-type(1) {
      order: 2;
    }

    .footer__nav:nth-of-type(2) {
      order: 3;
    }

    .footer__nav:nth-of-type(3) {
      order: 4;
    }

    .footer__nav:nth-of-type(4) {
      order: 5;
    }
  }

  /* Optimized tablet breakpoint (768px-900px) */
  @media (min-width: 768px) and (max-width: 900px) {
    .footer__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
    }

    .footer__brand {
      grid-column: span 2;
      display: grid;
      grid-template-columns: 1fr auto;
      gap: var(--space-4);
      align-items: start;
    }

    .footer__logo {
      grid-column: span 2;
    }

    .footer__tagline {
      grid-column: 1;
    }

    .footer__brand .social-links {
      grid-column: 2;
      grid-row: 2;
      justify-self: end;
    }
  }

  @media (max-width: 600px) {
    .footer__grid {
      grid-template-columns: 1fr;
    }

    .footer__brand {
      grid-column: span 1;
      display: block;
    }

    .footer__brand .social-links {
      justify-self: start;
    }
  }
</style>
